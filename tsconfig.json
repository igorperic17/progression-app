{
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext"
        ],
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        // "outDir": "./build",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "sourceMap": true,
        "noEmit": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": false
     },
    // "exclude": [
    //     "node_modules",
    //     "babel.config.js",
    //     "metro.config.js",
    //     "jest.config.js"
    // ]
}